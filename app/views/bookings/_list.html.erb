  <% list = local_assigns[:list] %>
  <% active = local_assigns[:active] %>

  <% list.each do |booking| %>
      <div class="booking-card <%= "hidden" unless active %>" data-toggle-target="cards">
        <div class="img-booking-content">
          <% @photo = Pension.find(booking.pension_id) %>
          <%= cl_image_tag @photo.photos[0].key %>
          <div class="booking-content">
            <h4 class="nb-resa">#<%= booking.id %></h4>
            <div class="name-select-pension">
              <%= Pension.select(:name).find(booking.pension_id).name %>
            </div>
            <div>
              <%= Pension.select(:address).find(booking.pension_id).address.split(',')[0] %>
            <br/>
              <%= Pension.select(:address).find(booking.pension_id).address.split(',')[1] %>
            </div>
            <div class="booking-pets">
              <% @user_pets = UserPet.where(user_basket_id: booking.user_basket_id) %>
              <% @user_pets.each do |pet| %>
                  <%= image_tag 'bouvier.jpg' %>
                  <p><%= pet.name %></p>
              <% end %>
            </div>
          </div>
        </div>

    <div class="container">
      <h1><%= current_user.first_name %></h1>
        <div class="video-call"
        data-controller="video-call"
          data-video-call-access-token-value="<%= @twilio_jwt %>"
          data-video-call-room-id-value="<%= @room_id %>"
          data-video-call-buddy-video-width-value="200"
        >
        <div class="call-video-views">
          <div id="remote-video" data-video-call-target="buddyVideo">
            <div class="no-call" data-video-call-target="noCall">
              No call in progress. Click 'Call' to connect!
            </div>
            <div class="waiting-for-buddy d-none"
              data-video-call-target="awaitingBuddy">
              Waiting for "user" to join...
            </div>
          </div>
          <div id="local-video" data-video-call-target="localVideo"></div>
        </div>
        <div class="call-buttons">
          <%= link_to '#',
                      class: 'call-button btn-start-call',
                      data: {
                        action: 'click->video-call#joinCall',
                        video_call_target: 'joinCallButton'
                      } do %>
            <i class="fas fa-phone"></i> Call
          <% end %>
          <%= link_to '#',
                      class: 'call-button btn-end-call d-none',
                      data: {
                        action: 'click->video-call#endCall',
                        video_call_target: 'endCallButton'
                      } do %>
            <i class="fas fa-phone-slash"></i> End
          <% end %>
        </div>
      </div>
    </div>
        <div class="booking-time-dates">
          <div class="booking-dates">
            <p>Du :</p> <%= booking.start_date.strftime("%d/%m/%Y") %>
            <p class="au">Au :</p> <%= booking.end_date.strftime("%d/%m/%Y") %>
          </div>
          <div class="booking-time">
            <% @nb_jours = Nbjour.new(booking.start_date, booking.end_date) %>
            <% @total_days = @nb_jours.cal_nb_jours %>
            <%= pluralize (@total_days), "jour" %>
          </div>
        </div>
        <div class="line"></div>
        <div class="booking-total-price">
          <p>Prix total :</p>
          <p> <%= booking.total_price %> â‚¬ </p>
        </div>
      </div>
    <% end  %>
