<div class="signup_login">
  <h2 class="title-signup-login">Connectez-vous</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="login-form-inputs">
      <p class="signup-login-input">Identifiant :</p>
        <%= f.input_field :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" }#, placeholder: "email" 
                    %>
      <p class="signup-login-input">Mot de passe :</p>
        <%= f.input_field :password,
                    required: false,
                    input_html: { autocomplete: "current-password" }#, placeholder: "mot de passe"
                     %>
      <%= f.input :remember_me, label: "se souvenir de moi", id: "remember-me", as: :boolean if devise_mapping.rememberable? %>
    </div>
    <div class="account-Y-N">
      <p>Pas encore de compte ?</p>
      <%= render "devise/shared/links" %>
    </div>  
    <div class="footer-yellow login" id="login">
      <div class="btn-footer-login">
        <%= f.button :submit, "CONTINUER", id: 'search-button' %>
      </div>
    </div>
    <% end %>
  
  
</div>
