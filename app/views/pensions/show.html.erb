<div class="main-box">

  <div class="top-box">
    <div class="container">
      <div class="pension-top-box-carroussel">
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img src="https://images.unsplash.com/photo-1509023464722-18d996393ca8?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1770&q=80" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="https://images.unsplash.com/photo-1610238115511-81be15284155?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1772&q=80" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
              <img src="..." class="d-block w-100" alt="...">
            </div>
          </div>
          <button class="carousel-control-prev" type="button" data-target="#carouselExampleIndicators" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </button>
          <button class="carousel-control-next" type="button" data-target="#carouselExampleIndicators" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
            </button>
        </div>
      </div>
      <div class="pension-top-box-title">
        <h3><%= @pension.name %></h3>
      </div>
    
    </div>
  </div>

  <div class="pension-box">
    <div class="container">
      <div class="main-card-box">
        <div class="main-card-box-title">
          <h3><%= @pension.name %></h3>
          <h5>A partir de 31€ / jour</h5>
        </div>
        <div class="main-card-box-address">
          <div class="pension-address">
          <p><%= @pension.address %></p>
          <i class="fas fa-star"></i><p>5/5</p>
          </div>
          <div class="pension-remaining-spots">
            <h5><%= @pension.space_left %></h5>
            <p>Places restantes</p>
          </div>
        </div>
        <div class="main-card-box-photos">
            <h5>Photos</h5>
          <div class="photo-grid">
            <%= cl_image_tag @pension.photos[0].key, crop:"fill", effect: "improve" %>
            <%= cl_image_tag @pension.photos[1].key, crop:"fill", effect: "improve" %>
            <%= cl_image_tag @pension.photos[2].key, crop:"fill", effect: "improve" %>
            <%= cl_image_tag @pension.photos[3].key, crop:"fill", effect: "improve" %>
            <%= cl_image_tag @pension.photos[4].key, crop:"fill", effect: "improve" %>
          </div>
        </div>
        <div class="main-card-box-description">
          <h5>Description</h5>
          <p><%= @pension.description %></p>
        </div>
        <div class="main-card-box-journey">
          <h5>Information sur le trajet</h5>
          <div class="journey-address">
            <i class="far fa-map"></i>
            <p><%= @pension.address %></p>
          </div>
          <p>+4min sur votre temps de trajet</p>
          <p>+10km de détour</p>
        </div>
        <div class="main-card-box-accepted">
          <h5>Animaux acceptés</h5>
          <div>
            <% PensionPet.where(pension_id: @pension.id).each do | pets | %>
              <%= image_tag "#{pets.pet_id}.png", width: 24, height: 24 %>
            <% end %>
          </div>
        </div>
        <div>
          <button class="reserve-btn"><%= link_to "RÉSERVER 155€", new_pension_booking_path(@pension) %></button>
        </div>
    </div>
  </div>

</div>




