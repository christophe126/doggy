<H1>This this the Edit page</H1>

<div class="pets_selector">
  <h3>Avec qui ?</h3>
  <div class="pets_selector_cards"> 
    <div class="add_pet_card"><i class="fa fa-plus-circle"></i>
    </div>
    <% @user_pets.each do |pet| %>
      <div class="pets_selector_card">
        <div class="img_pet_card"></div>
        <div class="name_and_breed"><p><%= pet.name %> | <%= pet.size %> | <%= pet.pet.breed %></p>
      </div>
    <% end %>
  </div>
</div>

<div class="form-container">
  <%= simple_form_for @user_search do |f| %>
  <div class="form-body">
      <div class="date-picker-left">
        <div>
          <%= f.input :start_date, as: :date, html5: true, label: 'DEBUT' %>
        </div>
      </div>

      <div class="date-picker-right">
        <div>
          <%= f.input :end_date, as: :date, html5: true, label: 'FIN' %>
        </div>
      </div>
  </div>
  <div class="btn">
    <%= f.submit "VALIDER", class: "button" %>
  </div>
  <% end %>
</div>
