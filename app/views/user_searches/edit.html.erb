<div>
  <div class="return-link">
    <a href="#"><p>< RETOUR</p></a>
  </div>
  <h3 class="title_edit">Avec qui ?</h3>
  <div class="pets_selector">
    <div class="pets_selector_cards"> 
      <div class="add_pet_card"><i class="fa fa-plus-circle"></i></div>
      <% @user_pets.each do |pet| %>
        <div class="pets_selector_card">
          <div class="img_pet_card"><%= image_tag 'bouvier.jpg' %></div>
          <div class="name_and_breed">
            <p><%= pet.name %></p> <p><%= image_tag 'Dog.png' %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <h3 class="title_edit">Quand ?</h3>
  <div class="form-container">
    <%= simple_form_for @user_search do |f| %>
      <div class="form-body">
        <div id="date-input">
          <p class="time">Du :</p>
          <%= f.input_field :start_date, as: :date, html5: true %>
          <p class="time">Au :</p>
          <%= f.input_field :end_date, as: :date, html5: true %>
        </div>
      </div>
      <div id="footer-yellow">
        <div class="btn-footer-edit">
          <%= f.submit "SUIVANT", id: 'search-button' %>
        </div>
      </div> 
    <% end %>
  </div>
</div>


